<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="lin.snacks.dao.SnackMapper">
	<select id="findSnackByAll" resultType="lin.snacks.pojo.Snack">
		SELECT * FROM snack a WHERE a.status='order'
	</select>
	<select id="findSnackById" parameterType="java.lang.String" resultType="lin.snacks.pojo.Snack">
	SELECT * FROM snack a WHERE a.id=#{id}
	</select>

	<select id="findSnackByDesign" resultType="lin.snacks.pojo.Snack">
		SELECT * FROM snack a WHERE a.status='design'
	</select>

	<select id="findSnackByOnline" resultType="lin.snacks.pojo.Snack">
	SELECT * FROM snack a WHERE a.status='online'
	</select>
	
	<select id="findSnackByAdvanced">
	SELECT * FROM snack a WHERE a.name LIKE '%${name}%'	
	</select>

	
	
</mapper>